---
import { SITE } from "../consts";

const nav = [
  { href: "/", label: "Home" },
  { href: "/blog", label: "Blog" },
  { href: "/about", label: "About" },
];
---

<header class="container" style="padding: var(--pad) 0 0;">
  <a class="skip-link" href="#content">Skip to content</a>

  <div
    class="card"
    style="padding: 14px 18px; display:flex; align-items:center; justify-content:space-between; gap:12px;"
  >
    <a
      href="/"
      style="font-weight: 800; letter-spacing: .2px; color: var(--text); text-decoration:none;"
    >
      {SITE.title}
    </a>

    <nav style="display:flex; gap:14px; flex-wrap:wrap;">
      {
        nav.map((i) => (
          <a
            href={i.href}
            style="color: var(--text); opacity: .85; text-decoration:none;"
          >
            {i.label}
          </a>
        ))
      }
    </nav>
  </div>
</header>
